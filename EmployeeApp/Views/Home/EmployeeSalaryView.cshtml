
@{
    ViewData["Title"] = "EmployeeSalaryView";
}

@model EmployeeApp.Dtos.EmpSalaryDetailsDto

<!-- Bootstrap CSS (if not included in layout) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<!-- Optional: Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    .payslip-card {
        border-radius: 15px;
        background: #f9f9f9;
        padding: 30px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    .payslip-header {
        background: linear-gradient(45deg, #4e73df, #224abe);
        color: white;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 30px;
    }

    .table th {
        background-color: #4e73df;
        color: white;
    }

    .netpay-box {
        background: #e9f7ef;
        border-left: 5px solid #28a745;
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
    }
</style>

<div class="container mt-5">
    <div class="payslip-card">

        <div class="payslip-header text-center">
            <h2><i class="fa-solid fa-building"></i> ABC Company</h2>
            <h5>Payslip for @Model.Month @Model.Year</h5>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <h4><i class="fa-solid fa-user"></i> Employee Details</h4>
                <p><strong>Name:</strong> @Model.Name</p>
                <p><strong>Employee ID:</strong> @Model.Id</p>
                <p><strong>Month:</strong> @Model.Month</p>
                <p><strong>Year:</strong> @Model.Year</p>
            </div>
            <div class="col-md-6 text-end">
                <h4><i class="fa-solid fa-wallet"></i> Net Pay</h4>
                <h3 class="text-success">₹ @Model.NetSalary</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <h5><i class="fa-solid fa-money-bill-wave"></i> Earnings</h5>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Component</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr><td>Basic Salary</td><td>₹ @Model.BasicSalary</td></tr>
                        <tr><td>HRA</td><td>₹ @Model.Hra</td></tr>
                        <tr><td>Transport Allowance</td><td>₹ @Model.TransportAllowances</td></tr>
                        <tr><td>Dining Allowance</td><td>₹ @Model.DiningAllowances</td></tr>
                        <tr><td>Reimbursement</td><td>₹ @Model.Reimbursement</td></tr>
                        <tr class="table-success"><th>Gross Earnings</th><th>₹ @Model.TotalEarnings</th></tr>
                    </tbody>
                </table>
            </div>

            <div class="col-md-6">
                <h5><i class="fa-solid fa-minus-circle"></i> Deductions</h5>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Component</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr><td>Income Tax</td><td>₹ @Model.IncomeTax</td></tr>
                        <tr><td>EPF</td><td>₹ @Model.Epf</td></tr>
                        <tr><td>Cross Earnings Deductions</td><td>₹ @Model.CrossEarningDeductions</td></tr>
                        <tr class="table-danger"><th>Total Deductions</th><th>₹ @Model.TotalDeductions</th></tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="netpay-box text-center">
            <h4><i class="fa-solid fa-sack-dollar"></i> Total Net Payable: ₹ @Model.NetSalary</h4>
        </div>

    </div>
</div>

